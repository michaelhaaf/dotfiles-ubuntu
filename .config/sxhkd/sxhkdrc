##### SUPER #####

# show help
super + slash
	exec sxhkd-help

# volume up
super + Up
	pulsemixer --change-volume +1

# volume down
super + Down
	pulsemixer --change-volume -1

# terminal emulator
super + Return
	kitty --single-instance

# program launcher
super + space
	rofi -show run

# window switcher
alt + Tab
    rofi -show window

# ranger
super + r
    kitty --single-instance "ranger"
    
# vimwiki
super + v
    kitty --single-instance vim -c VimwikiIndex

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on


##### SUPER + ALT #####

# screenshot to file
super + alt + @x
	scrot -s

# brightness up
super + alt + Up
    brightness-adj inc

# brightness down
super + alt + Down
    brightness-adj dec

# webcam/tetriscam/reset
super + alt + {w, t, v}
	exec {camtoggle,tetristoggle,camreset}

# system suspend/reboot/shutdown
super + {_, alt, shift} + BackSpace
	systemctl {suspend,reboot,poweroff}

# pass manager launcher
super + alt + {_, shift} + p
	rofi-pass {_,--insert}

# calc launcher
super + alt + c
    rofi -show calc -modi calc -no-show-match -no-sort -calc-command "echo -n '{result}' | xclip"

# bluetooth launcher
super + alt + space
    rofi-bluetooth

# kitty new instance
super + alt + Return
    kitty 

# toggle window layer
super + alt + l
    switchLayer


##### SUPER + CTRL #####


# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# set the node flags (marked, locked, sticky, private)
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


##### SUPER + SHIFT #####

# screenshot to clipboard
super + shift + @x
	scrot -s -e 'xclip -selection clipboard -t image/png -i $f'

# volume mute toggle
super + shift + m
	pulsemixer --toggle-mute	

# toggle compositor
super + shift + b
    exec compositoggle 

# floating ranger
super + shift + r
    kitty --single-instance --class start_floating "ranger"
#
# floating vimwiki
super + shift + v
    kitty --single-instance --class start_floating vim -c VimwikiIndex

# floating terminal
super + shift + Return
    kitty --single-instance --class start_floating

# quit/restart bspwm
super + shift + {q,e}
	bspc {quit,wm -r} && dunstify "bspwm reloaded"

# make sxhkd reload its configuration files:
super + shift + Tab
	pkill -USR1 -x sxhkd && dunstify "sxhkd reloaded"

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# layout cycle
super + shift + g
	bsp-layout cycle --layouts tall,wide,rtall,rwide,grid,rgrid,even,tile

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# set the window state (tiled, pseudo, floating, fullscreen)
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


##### MOVE/RESIZE #####

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -50 0,bottom 0 50,top 0 -50,right 50 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -50 0,top 0 50,bottom 0 -50,left 50 0}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-50 0,0 50,0 -50,50 0}


##### NUMPAD #####
# placeholders for extra numpad buttons
super + KP_{Divide,Multiply,Subtract,Add,Decimal,Enter,Separator}
    notify-send {0-9,Divide,Multiply,Subtract,Add,Decimal,Enter,Separator}

# windows: numpad numbers can be used the same as top row numbers
super + {_,shift + }KP_{Home,Up,Prior,Left,Begin,Right,End,Down,Next,Insert}
	bspc {desktop -f,node -d} '^{7,8,9,4,5,6,1,2,3,10}'

# preselect the ratio: numpad numbers can be used the same as top row numbers
super + ctrl + KP_{Home,Up,Prior,Left,Begin,Right,End,Down,Next}
	bspc node -o 0.'{7,8,9,4,5,6,1,2,3}'
